{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "semi": false,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "(?=content|api)",
    "@lib|@hooks|@actions|@server",
    "@ui|@components",
    "@features",
    "@types",
    "(.svg|.png|.jpg |.jpeg)",
    "(^../(.*)$|^./(.*)$)"
  ],
  "importOrderSeparation": true
}
